@model IMSWebApp.Models.TankLogDaily

@{
    ViewData["Title"] = "Tank Logs Registry";
}

<!-- Create a panel to hold all elements in the page -->
<div class="panel panel-info">
    <!-- Panel Heading -->
    <div class="panel-heading">
        <h2>
            <span class='glyphicon glyphicon-pencil' style="color:#5cb85c"></span>
            &nbsp;@ViewData["Title"]
        </h2>
    </div>
    <!-- Panel Body -->
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdPk" />
                    <div class="form-group">
                        <label asp-for="LogDate" class="control-label"></label>
                        <input asp-for="LogDate" class="form-control" />
                        <span asp-validation-for="LogDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LogFk" class="control-label"></label>
                        <select asp-for="LogFk" class="form-control" asp-items="ViewBag.LogFk"></select>
                        <span asp-validation-for="LogFk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReasonFk" class="control-label"></label>
                        <select asp-for="ReasonFk" class="form-control" asp-items="ViewBag.ReasonFk"></select>
                        <span asp-validation-for="ReasonFk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Qty" class="control-label"></label>
                        <input asp-for="Qty" class="form-control" />
                        <span asp-validation-for="Qty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StuffFk" class="control-label"></label>
                        <select asp-for="StuffFk" class="form-control" asp-items="ViewBag.StuffFk"></select>
                        <span asp-validation-for="StuffFk" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom:0!important;">
                        <input type="submit" value="Save" class="btn btn-lg btn-success btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Panel Footer -->
    <div class="panel-footer">
        <div>
            <a class="btn btn-primary btn-lg btn-block" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
