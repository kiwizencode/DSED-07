@{
    ViewData["Title"] = "Home Page";
}

@*
    using the following uri as a template Home page
    https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_temp_store&stacked=h
*@


<div class="jumbotron">
    <div class="container text-center">
@* 
        <h1>Imports Quarantine Management System</h1>
        <p></p>    
*@
        <h1> ASP.NET Core 2 + MVC + Web API Application</h1>
    </div>
</div>


<div class="row">
    <div class="col-sm-4">
        <div class="panel panel-info">
            <div class="panel-heading" style="text-align:center;font-size:24px;">Species Movement Log</div>
            <div class="panel-body">
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "MovementPeriods")'">Setup Quarantine Period</button>
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "TankLogs")'">Tank Log Registry</button>
                <button class="btn-primary btn-block btn-lg" 
                        onclick="location.href='@Url.Action("Index", "TankLogDailies")'">Daily Mortilty Registry</button>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-info">
            <div class="panel-heading" style="text-align:center;font-size:24px;">Tank Info Setup</div>
            <div class="panel-body">
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "TankBays")'">Setup Bay / Bank / Aisle</button>
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "Tanks")'">Tank Registry</button>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-info">
            <div class="panel-heading" style="text-align:center;font-size:24px;">System</div>
            <div class="panel-body">
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("ApprovedSpecies", "Home")'">MPI Approved Species</button>
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "ReasonMortalities")'">Mortality Reason</button>
                <button class="btn-primary btn-block btn-lg"
                        onclick="location.href='@Url.Action("Index", "RecordPetSizes")'">Marine Size</button>

            </div>
        </div>
    </div>
</div>