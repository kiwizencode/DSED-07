@model IEnumerable<IMSWebApp.Models.TankLog>

@{
    ViewData["Title"] = "Tank Logs Registry";
}

<!-- Create a panel to hold all elements in the page -->
<div class="panel panel-info">
    <!-- Panel Heading -->
    <div class="panel-heading">
        <h2>
            <a class="btn btn-warning btn-lg" asp-action="Create">
                <span class="glyphicon glyphicon-plus"></span>
            </a>
            &nbsp;&nbsp;@ViewData["Title"]
        </h2>
    </div>
    <!-- Panel Body -->
    <div class="panel-body">
        @*
            Bootstrap 3 Table inside a panel overflowing
            https://stackoverflow.com/questions/25071030/bootstrap-3-table-inside-a-panel-overflowing
        *@
        <div class="table-responsive">

            <table id="table_id" class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th></th>

                        <th>
                            @Html.DisplayNameFor(model => model.TankFkNavigation)
                        </th>
                        @*
                            <th>
                                @Html.DisplayNameFor(model => model.OrderFk)
                            </th>
                        *@
                        <th style="text-align:left;padding-left:10px">
                            @Html.DisplayNameFor(model => model.SpeciesFkNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SizeFkNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Qty)
                        </th>
                        <th style="text-align:left;padding-left:10px">
                            @Html.DisplayNameFor(model => model.SpeciesText)
                        </th>
                        <th style="text-align:left;padding-left:10px">
                            @Html.DisplayNameFor(model => model.SpeciesText2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StuffFkNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PeriodFkNavigation)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(x => x.PeriodFkNavigation.StartDate)
                                    .OrderBy(x => x.TankFkNavigation.IdCode))
                    {
                        <tr>

                            <!-- set the column to just fit contents-->
                            <td style="width:1%;white-space:nowrap">
                                <div>
                                    <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.IdPk">
                                        <span class='glyphicon glyphicon-pencil'></span>
                                    </a>
@*
                                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.IdPk">
                                        <span class='glyphicon glyphicon-search'></span>
                                    </a>
*@
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdPk">
                                        <span class='glyphicon glyphicon-trash'></span>
                                    </a>
                                </div>
                            </td>                            
                            <td>
                                @Html.DisplayFor(modelItem => item.TankFkNavigation.IdCode)
                            </td>
                            @*
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderFk)
                                </td>
                            *@
                            <td style="text-align:left;padding-left:10px">
                                @Html.DisplayFor(modelItem => item.SpeciesFkNavigation.Scientific)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SizeFkNavigation.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td style="text-align:left;padding-left:10px">
                                @Html.DisplayFor(modelItem => item.SpeciesText)
                            </td>
                            <td style="text-align:left;padding-left:10px">
                                @Html.DisplayFor(modelItem => item.SpeciesText2)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Comment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StuffFkNavigation.IdCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PeriodFkNavigation.StartDate)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

